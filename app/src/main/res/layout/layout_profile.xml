    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/profile_text_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/lay_mail"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mail address"
                    android:textColor="#a3a3a3"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mail_lay_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mail_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mail_view"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/mail_text"
                android:layout_toRightOf="@+id/mail_lay_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/view_text_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="abcd@gmail.com"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="13dp"
                    android:autoSizeMaxTextSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="#6a6a6a"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider_mail"
            android:layout_below="@id/lay_mail"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/black" />


        <RelativeLayout
            android:id="@+id/lay_phone"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/divider_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!--            <LinearLayout-->
<!--                android:id="@+id/phone_lay_icon"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="30dp">-->
<!--                <ImageView-->
<!--                    android:layout_width="25dp"-->
<!--                    android:layout_height="25dp"-->
<!--                    android:src="@drawable/phone_icon_24"/>-->
<!--            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#a3a3a3"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_lay_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="22dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/phone_icon_24"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ph_view"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/phone_text"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/phone_lay_icon"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/view_text_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textColor="#6a6a6a"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="9513578520"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="15dp"
                    android:autoSizeMaxTextSize="18dp"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider_phone"
            android:layout_below="@id/lay_phone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/black" />


        <RelativeLayout
            android:id="@+id/lay_code"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/divider_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/code_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refferal Code"
                    android:textColor="#a3a3a3"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/code_lay_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="5dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/code_icon_24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/code_text"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@id/code_lay_icon"
                android:background="@drawable/view_text_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textColor="#6a6a6a"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="ASDE8545"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="13dp"
                    android:autoSizeMaxTextSize="20dp"/>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider_code"
            android:layout_below="@id/lay_code"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/black"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>
</layout>
